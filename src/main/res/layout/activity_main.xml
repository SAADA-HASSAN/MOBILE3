<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/DPtv"
        android:layout_alignBottom="@id/DPtv"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@id/button"
        android:text="@string/date_pick" />

    <TextView
        android:id="@+id/DPtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_alignLeft="@id/TPtv"
        android:layout_alignStart="@id/TPtv"
        android:layout_marginTop="28dp"
        android:text="@string/date_tv_text" />

    <TextView
        android:id="@+id/TPtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/checkBox"
        android:layout_alignStart="@+id/CBtv"
        android:layout_alignLeft="@+id/CBtv"
        android:layout_marginTop="23dp"
        android:text="@string/time_tv_text" />

    <TextView
        android:id="@+id/CBtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SPtv"
        android:layout_alignStart="@+id/SPtv"
        android:layout_below="@+id/SPtv"
        android:layout_marginTop="43dp"
        android:text="@string/checkbox_not_selected" />

    <TextView
        android:id="@+id/SPtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignBottom="@id/spinner"
        android:layout_alignLeft="@id/TBtv"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="540dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/TBtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_alignBottom="@id/toggleButton"
        android:layout_alignBaseline="@id/toggleButton"
        android:text="@string/toggle_tv_text" />


    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
         />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/toggleButton"
        android:layout_alignLeft="@id/toggleButton"
        android:layout_alignEnd="@id/toggleButton"
        android:layout_alignRight="@id/toggleButton"
        android:layout_below="@id/toggleButton"

        android:layout_marginTop="34dp"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignLeft="@id/button"
        android:layout_alignStart="@id/button"
        android:layout_alignBaseline="@id/CBtv"
        android:layout_below="@id/spinner"
        android:text="@string/time_pick" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignBaseline="@id/DPtv"
        android:layout_alignStart="@id/button"
        android:layout_alignLeft="@id/button"
        android:layout_alignBottom="@id/DPtv"
        android:text="@string/date_pick" />
</RelativeLayout>